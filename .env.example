# Discord Bot Configuration (Required)
BOT_TOKEN=your_bot_token_here
REPORT_CHANNEL_ID=your_report_channel_id_here

# Bot Settings (Optional)
COMMAND_PREFIX=!
CASE_INSENSITIVE=true

# Anti-Raid Configuration (Optional)
SPAM_THRESHOLD=5
KICK_THRESHOLD=10
COOLDOWN_SECONDS=10

# Moderation Settings (Optional)
MAX_WARNINGS_BEFORE_ACTION=5
ENABLE_AUDIT_LOGGING=true

# Logging (Optional)
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///warnings.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@host:5432/database

# Security Keys (Generate new ones for production!)
ENCRYPTION_KEY=your_base64_encryption_key_here
SALT_KEY=your_base64_salt_key_here
PEPPER_KEY=your_base64_pepper_key_here
KEY_DERIVATION_SALT=your_key_derivation_salt_here